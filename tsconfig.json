{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@codegen/*": [
        "src/codegen/*"
      ],
      "@queries/*": [
        "src/queries/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "target": "ES6", // @0no-co/graphqlsp Requires ES6 and above
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./src/codegen/schema.graphql"
      },
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
